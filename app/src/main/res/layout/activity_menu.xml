<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:background="@android:color/white"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/left_arrow"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Menu" />

    <Button
        android:id="@+id/btn_triangulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="36dp"
        android:onClick="redirectTriangulo"
        android:text="@string/triangulo"
        app:layout_constraintTop_toBottomOf="@+id/img_menu"
        tools:layout_editor_absoluteX="0dp"
        android:backgroundTint="@color/blue"
        />

    <Button
        android:id="@+id/btn_trapecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/blue"
        android:onClick="redirectTrapecio"
        android:text="@string/trapecio"
        app:layout_constraintTop_toBottomOf="@+id/btn_triangulo"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_rectangulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/blue"
        android:onClick="redirectRectangulo"
        android:text="@string/rectangulo"
        app:layout_constraintTop_toBottomOf="@+id/btn_trapecio"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_circulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/blue"
        android:onClick="redirectCirculo"
        android:text="@string/circulo"
        app:layout_constraintTop_toBottomOf="@+id/btn_rectangulo"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_rombo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/blue"
        android:onClick="redirectRombo"
        android:text="@string/rombo"
        app:layout_constraintTop_toBottomOf="@+id/btn_circulo"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="175dp"
        android:layout_height="135dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>